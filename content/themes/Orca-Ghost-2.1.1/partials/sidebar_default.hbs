{{! USER CONFIGURATION OF THIS PAGE IS NOT REQUIRED }}
<div class="alternate" id="sidebar">
	<aside>
		<!-- Description Widget -->
		<div class="widget info_widget">
			{{#if @blog.logo}}
			<a href="{{@blog.url}}" class="logo"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
			{{/if}}

			<img src="/content/images/headshot.png" />

			<h2>Greg Shackles</h2>

			<p>{{@blog.description}}</p>
		</div>
		<!-- Social Widget -->
		<div class="widget social_widget">
			{{> social_sidebar}}
		</div>
		<!-- Tag Widget -->
		<div class="widget tag_widget">
			{{> tags}}
		</div>
	</aside>
</div>